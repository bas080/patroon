--- Helpers
// TODO: write some tests for arrays with odd list length and empty list.
function toPairs([a, b, ...rest], result = []) {
  return (rest.length !== 0)
    ? toPairs(rest, [...result, [a, b]])
    : [...result, [a, b]]
}
